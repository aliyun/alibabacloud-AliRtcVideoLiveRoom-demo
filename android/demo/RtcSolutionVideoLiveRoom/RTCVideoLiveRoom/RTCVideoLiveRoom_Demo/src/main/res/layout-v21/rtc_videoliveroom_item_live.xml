<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/rtc_videoliveroom_width_live_cover_166"
    android:layout_height="@dimen/rtc_videoliveroom_height_live_cover_210">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/rtc_videoliveroom_iv_live_cover"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/rtc_videoliveroom_tv_live_title"
        android:layout_alignParentBottom="true"
        android:textColor="@color/rtc_videoliveroom_color_text_white"
        android:layout_marginLeft="@dimen/rtc_videoliveroom_margin_10"
        android:layout_marginRight="@dimen/rtc_videoliveroom_margin_10"
        android:layout_marginBottom="@dimen/rtc_videoliveroom_margin_10"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="@dimen/rtc_videoliveroom_size_text_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
